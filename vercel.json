{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "static/**", "use": "@vercel/static" }
  ],
  "rewrites": [

    { "source": "/", "destination": "/mobile/login" },
    { "source": "/mobile", "destination": "/mobile/login" },

    {
      "source": "/mobile/:path((?!.*\\.(?:html|css|js|png|jpg|jpeg|gif|svg)).*)",
      "destination": "/server.js"
    }

  ]
}
