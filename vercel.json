{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "static/**", "use": "@vercel/static" },
    { "src": "config.js", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/", "destination": "/mobile/login" },

    { "source": "/mobile/login", "destination": "/server.js" },
    { "source": "/mobile/api/:path*", "destination": "/server.js" },

    { "source": "/mobile", "destination": "/login.html" },
    { "source": "/mobile/home", "destination": "/server.js" },

    { "source": "/mobile/config.js", "destination": "/config.js" },
    { "source": "/mobile/static/:path*", "destination": "/static/:path*" }
    

    { "source": "/mobile/profile", "destination": "/profile.html" },
    { "source": "/mobile/calendar", "destination": "/calendar.html" },
    { "source": "/mobile/checkin", "destination": "/checkin.html" },

    { "source": "/mobile/workflow", "destination": "/workflow.html" },

    { "source": "/mobile/leave/transactions", "destination": "/leave_transactions.html" },
    { "source": "/mobile/leave/details", "destination": "/leave_details.html" },

    { "source": "/mobile/document/transactions", "destination": "/document_transactions.html" },
    { "source": "/mobile/document/details", "destination": "/document_details.html" },

    { "source": "/mobile/excuse/transactions", "destination": "/excuse_transactions.html" },
    { "source": "/mobile/excuse/details", "destination": "/excuse_details.html" },

    { "source": "/mobile/reimbursement/transactions", "destination": "/reimbursement_transactions.html" },
    { "source": "/mobile/reimbursement/details", "destination": "/reimbursement_details.html" },

    { "source": "/mobile/flight/transactions", "destination": "/flight_transactions.html" },
    { "source": "/mobile/flight/details", "destination": "/flight_details.html" },

    { "source": "/mobile/business/transactions", "destination": "/business_transactions.html" },
    { "source": "/mobile/business/details", "destination": "/business_details.html" },

    { "source": "/mobile/onbehalf/leave", "destination": "/onbehalf_leave.html" },
    { "source": "/mobile/onbehalf/excuse", "destination": "/onbehalf_excuse.html" },
    { "source": "/mobile/onbehalf/document", "destination": "/onbehalf_document.html" },
    { "source": "/mobile/onbehalf/reimbursement", "destination": "/onbehalf_reimbursement.html" },
    { "source": "/mobile/onbehalf/flight", "destination": "/onbehalf_flight.html" },
    { "source": "/mobile/onbehalf/business", "destination": "/onbehalf_business.html" },

    { "source": "/mobile/approvals/leave/pending", "destination": "/pending_leave_transactions.html" },
    { "source": "/mobile/approvals/excuse/pending", "destination": "/pending_excuse_transactions.html" },
    { "source": "/mobile/approvals/document/pending", "destination": "/pending_document_transactions.html" },
    { "source": "/mobile/approvals/reimbursement/pending", "destination": "/pending_reimbursement_transactions.html" },
    { "source": "/mobile/approvals/flight/pending", "destination": "/pending_flight_transactions.html" },
    { "source": "/mobile/approvals/business/pending", "destination": "/pending_business_transactions.html" },

    { "source": "/mobile/team/hierarchy", "destination": "/team_hierarchy.html" },
    { "source": "/mobile/team/calendar", "destination": "/team_calendar.html" }
  ]
}
